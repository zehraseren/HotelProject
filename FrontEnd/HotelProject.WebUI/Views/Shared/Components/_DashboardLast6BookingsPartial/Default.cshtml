@model List<ResultLast6BookingsDto>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>Müşteri</th>
                                    <th>Şehir</th>
                                    <th>Ülke</th>
                                    <th>Durum</th>
                                    <th>Özel İstek</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.City</td>
                                        <td>@item.Country</td>
                                        @if (item.Status == "Onaylandı")
                                        {
                                            <td><i class="fa fa-circle-o text-success mr-2"></i>@item.Status</td>
                                        }
                                        @if (item.Status == "Onay bekliyor")
                                        {
                                            <td><i class="fa fa-circle-o text-warning mr-2"></i>@item.Status</td>
                                        }
                                        @if (item.Status == "Müşteri aranacak")
                                        {
                                            <td><i class="fa fa-circle-o text-info mr-2"></i>@item.Status</td>
                                        }
                                        @if (item.Status == "İptal edildi")
                                        {
                                            <td><i class="fa fa-circle-o text-danger mr-2"></i>@item.Status</td>
                                        }
                                        <td>@item.SpeacialRequest</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>