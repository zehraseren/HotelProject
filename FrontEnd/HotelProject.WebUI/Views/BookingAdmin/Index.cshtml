@model List<ResultBookingDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card-body">
    <div class="card-title">
        <h4>Rezervasyonlar</h4>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Misafir</th>
                    <th>Giriş Tarihi</th>
                    <th>Çıkış Tarihi</th>
                    <th>Durumu</th>
                    <th>Onayla</th>
                    <th>İptal Et</th>
                    <th>Beklet</th>
                    <th>Güncelle</th>
                    <th>Detaylar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@item.Name</td>
                        <td>@(((DateTime)item.CheckIn).ToString("dd-MMM-yyyy"))</td>
                        <td>@(((DateTime)item.CheckOut).ToString("dd-MMM-yyyy"))</td>
                        <td><span class="badge badge-secondary text-white px-2">@item.Status</span></td>
                        <td><a href="/BookingAdmin/ApprovedReservation/@item.BookingID/" class="btn btn-outline-primary">Onayla</a></td>
                        <td><a href="#" class="btn btn-outline-danger">İptal Et</a></td>
                        <td><a href="#" class="btn btn-outline-warning">Beklet</a></td>
                        <td><a href="#" class="btn btn-outline-success">Güncelle</a></td>
                        <td><a href="#" class="btn btn-outline-info">Detaylar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

